{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2016", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2016",
        "types": []
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
