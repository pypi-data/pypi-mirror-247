{
    "Room": {
        "size":{    
            "length": 3.6,
            "width": 3.6,
            "height": 3
        }, // 房间尺寸
        "test_plane":{
            "gap": 0.18, // 测试点平面划分网格的间隔 (单位: m)
            "height": 0  //测试平面距离地面的高度
        },
        "wall":{
            "reflect_wall": [],    // 反射墙壁序列号(0=地板、1-4=前右后左、5=天花板)
            "gap": 0.15,           // 墙壁划分网格的间隔
            "n": 0.8,              // 墙壁反射率
            "wall_type": "regular" // 规则墙壁
        } // 反射墙壁
    }, // 初始化房间大小(长宽高) (单位: m)
    "PD_Info":{  
        "n": 1.5,        // 透镜的折射率
        "fov": 90,       // 接收视场角 (单位: 度)
        "Ar": 1e-4,      // PD检测器的接收面积(单位:平方米)
        "Ts": 1,         // 光学滤波器的增益
        "l": 0.1,        // 倾斜PD到中心水平PD的距离
        "PD1":{
            "alpha": 225,// PD的方位角
            "beta": 0    // PD的倾斜角
        },
        "PD2":{
            "alpha": 135,// PD的方位角
            "beta": 0    // PD的倾斜角
        },
        "PD3":{
            "alpha": 45, // PD的方位角
            "beta": 0    // PD的倾斜角
        },
        "PD4":{
            "alpha": 315,// PD的方位角
            "beta": 0    // PD的倾斜角
        }
    },
    "LED_Info": {
        "theta": 45,              // LED半功率点半角 (单位: 度)
        "signal": "DC",           // LED发射信号类型 
        "Fs":13000,               // 采样频率
        "NPT": 1024,              // 采样点数
        "LED1": {
            "pos":[1.8,1.8,3],    // LED位置
            "Pt":15,              // 直流信号功率
            "Amp": 24,            // 信号幅值
            "freq": 4000,         // LED发射频率
            "signal_func": "cos"  // 信号函数
        }
    }, 
    "Filter":{
        "Fs": 13000,         // 滤波器采样频率
        "n": 100,            // 滤波器阶数
        "width": [150, 400]  // 通带频率宽度
        // "window": "boxcar"
    } 
}

